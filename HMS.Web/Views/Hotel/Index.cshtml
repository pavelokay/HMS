@model Hotel
@{
    ViewData["Title"] = @Model.Name;
}
<section class="hotel-logo">
    <div class="hotel-main-logo">
        <img class="hotel-main-logo__image img-fluid" alt="@Model.HotelImages.FirstOrDefault(i => i.AltName.Contains("mainImage")).AltName" src="~/images/hotels/@Model.HotelImages.FirstOrDefault(i => i.AltName.Contains("mainImage")).ImageFile" />
        <div>
            <ul class="nav hotel-main-logo__nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Hotel" asp-action="Index" asp-route-hotelId="@Model.Id">Обзор отеля</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Hotel" asp-action="Accommodation" asp-route-hotelId="@Model.Id">Размещение</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Hotel" asp-action="Services" asp-route-hotelId="@Model.Id">Услуги</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Hotel" asp-action="Contacts" asp-route-hotelId="@Model.Id">Связаться с нами</a>
                </li>
            </ul>
        </div>
        <div class="hotel-main-logo__text">
            <h5 class="main-logo__text--hotelcomplexname">January Plaza</h5>
            <h3 class="display-4 main-logo__text--hotelname">@Model.Name</h3>
        </div>
    </div>
</section>


<section class="hotel-info">
    <div class="hotel-info__address">@Model.Address , @Model.Town @Model.Country</div>
    <div class="hotel-info__phone">Телефон @Model.PhoneNumber</div>
    <div class="hotel-info__description">@Model.Description</div>
</section>


<section class="hotel-images">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 carousel-item__image" alt="@Model.HotelImages.FirstOrDefault(i => i.AltName.Contains("hotelImage2")).AltName" src="~/images/hotels/@Model.HotelImages.FirstOrDefault(i => i.AltName.Contains("hotelImage2")).ImageFile" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 carousel-item__image" alt="@Model.HotelImages.FirstOrDefault(i => i.AltName.Contains("hotelImage3")).AltName" src="~/images/hotels/@Model.HotelImages.FirstOrDefault(i => i.AltName.Contains("hotelImage3")).ImageFile" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 carousel-item__image" alt="@Model.HotelImages.FirstOrDefault(i => i.AltName.Contains("hotelImage4")).AltName" src="~/images/hotels/@Model.HotelImages.FirstOrDefault(i => i.AltName.Contains("hotelImage4")).ImageFile" />
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
